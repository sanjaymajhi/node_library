extends layout

block content

  h1=title
  p ID&emsp;&emsp;&emsp;&nbsp; :&emsp; #{detail.id}
  p #[strong Title&emsp;&emsp;&ensp;:&emsp; ]
    a(href=detail.book.url) #{detail.book.title}
  p #[strong Imprint&emsp; :&emsp; ] #{detail.imprint}
  p #[strong Status&emsp;&nbsp; :&emsp; ] #{detail.status}
  if detail.status=="Maintenance" || detail.status=="Loaned"
    p #[strong Due&emsp;&emsp;&ensp; :&emsp; ] #{detail.due_back_formatted}
  br
  if user_logged==0
    form(action=detail.url+"/delete", method="get")
      input(type="submit", value="Delete Book Instance")
    br
    form(action=detail.url+"/update", method="get")
      input(type="submit", value="Update Book Instance")