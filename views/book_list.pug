extends layout

block content
  h1=title

  ul
  - books.sort(function(a, b) {let textA = a.title.toUpperCase(); let textB = b.title.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
  each book in books
    li 
      a(href=book.url) #{book.title} 
      |  (#{book.author.name})

  else
    li There are no books.