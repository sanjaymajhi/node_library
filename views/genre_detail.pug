extends layout

block content

  h1=title
  h2=genre.name
  if user_logged!=1
    button
      a(href=genre.url+"/delete") Delete Genre
    button
      a(href=genre.url+"/update") Update Genre
  ul
    each book in books
      li 
        a(href=book.url) #{book.title} 
        p="Author : "+book.author.name
        p Summary
        p=book.summary
    else
      li No books in this genre.